<div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Editar Cargo</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Inicio</a>
                </li>
				 <li>
                    <a href="/cargos">Cargos</a>
                </li>
                <li class="active">
                    <strong>Editar Cargo</strong>
                </li>
            </ol>
        </div>
</div>


<div class="container col-md-4 mt-3 mx-auto bg-light">
<form action="/cargos/{{cargo.id}}?_method=PUT" method="post" class="pt-2">

<div class="form-group">
   <label for="nombre">Nombre</label>
   <input type="text" class="form-control" placeholder="Nombre" autofocus name="nombre" id="nombre" required value="{{cargo.nombre}}">
</div>

<div class="form-group">
   <label for="sueldo">Sueldo</label>
   <input type="text" class="form-control" placeholder="Sueldo"  name="sueldo" id="sueldo" required value="{{cargo.sueldo}}">
</div>

<div class="form-group">
   <label for="sueldovar">Sueldo Var</label>
   <input type="text" class="form-control" placeholder="Sueldo Var"  name="sueldovar" id="sueldovar" required value="{{cargo.sueldovar}}">
</div>

<div class="form-group">
   <label for="descripcion">Descripción</label>
   <input type="text" class="form-control" placeholder="Descripción"  name="descripcion" id="descripcion" required value="{{cargo.descripcion}}">
</div>


<button class="btn btn-primary" type="submit">Editar</button>

</form>

</div>

