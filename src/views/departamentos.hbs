<div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Departamentos</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Inicio</a>
                </li>
                <li class="active">
                    <strong>Departamentos</strong>
                </li>
            </ol>
        </div>
       
</div>

<div class="container mt-2">
<a href="/departamentos/nuevo" class="btn btn-primary">Nuevo</a>
</div>


<div class="container mt-2 bg-light p-2">

<table id="departamentos" class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
     
	  <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
  {{#each results}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{UpperCase nombre}}</td>
     
	   <td><a class="text-primary" href="/departamentos/{{id}}">Editar</a></td>
    </tr>
  {{/each}} 
  </tbody>
</table>


</div>