	<script defer src="/public/js/custom.js" ></script>
	
</head>
<body>
<div class="wrapper">
    <!-- Sidebar  -->
    {{> navigation}}
	<!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                    </button>
					
					<button type="button" id="sidebarCollapse" class="btn btn-outline-info ml-3">
                        <i class="fas fa-plus" title="Nueva n&oacute;mina"></i>
						<span>Nueva n&oacute;mina</span>
                    </button>
					
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
						
						{{#if user}}
							<li class="nav-item active">
                                <a class="nav-link" href="#">Bienvenido, {{user.email}}</a>
                            </li>						
							<li class="nav-item ">
							
							<form action="/logout?_method=DELETE" method="POST">
							
							   <button type="submit"  class="nav-link btn btn-small btn-outline-warning ">Salir</button>
							</form>
                               
                            </li>
							
						{{else}}	
						    <li class="nav-item active">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/registro">Registro</a>
                            </li>	
						{{/if}}
						
                            
                            
                        </ul>
                    </div>
                </div>
            </nav>
                             
			{{#if msgSuccess}} 
			    <div class="alert alert-success">{{msgSuccess}}</div>
			{{/if}}
			
			{{#if msgDanger}} 
			    <div class="alert alert-danger">{{msgDanger}}</div>
			{{/if}}
			
			{{#if msgWarning}} 
			    <div class="alert alert-warning">{{msgWarning}}</div>
			{{/if}}
			
            {{{body}}}
			
        </div>
    </div>

   
</body>

